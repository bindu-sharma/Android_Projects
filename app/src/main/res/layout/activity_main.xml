<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/LightCoral"
        android:gravity="center"
        android:text="Assignment1"
        android:textColor="#1B5E20"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView android:id="@+id/InputScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left
"       android:minHeight="48dp"
        android:text="0"
        android:textColorHint="@color/white"
        android:textColor="#1B5E20"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginTop="70dp"
        />

    <!--First Linear Layout-->

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:weightSum="100">

        <Button android:id="@+id/one_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:text="1"
            android:textSize="30dp"
            android:backgroundTint="@color/Pink"
            android:textColor="#1B5E20"
            />

        <Button android:id="@+id/two_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:text="2"
            android:textSize="30dp"
            android:backgroundTint="@color/Pink"
            android:textColor="#1B5E20"/>

        <Button android:id="@+id/three_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:text="3"
            android:textSize="30dp"
            android:backgroundTint="@color/Pink"
            android:textColor="#1B5E20"/>

        <Button android:id="@+id/plus_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:text="+"
            android:textSize="30dp"
            android:textColor="#1B5E20"
            android:backgroundTint="@color/Pink"/>

    </LinearLayout>

    <!--Second Linear Layout-->

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">

        <Button android:id="@+id/four_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:text="4"
            android:textSize="30dp"
            android:backgroundTint="@color/Pink"
            android:textColor="#1B5E20"
            />

        <Button android:id="@+id/five_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:text="5"
            android:textSize="30dp"
            android:backgroundTint="@color/Pink"
            android:textColor="#1B5E20"/>

        <Button android:id="@+id/six_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:text="6"
            android:textSize="30dp"
            android:backgroundTint="@color/Pink"
            android:textColor="#1B5E20"/>

        <Button android:id="@+id/minus_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:text="-"
            android:textSize="30dp"
            android:textColor="#1B5E20"
            android:backgroundTint="@color/Pink"/>

    </LinearLayout>

    <!--Third Linear Layout-->

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">

        <Button android:id="@+id/seven_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:text="7"
            android:textSize="30dp"
            android:backgroundTint="@color/Pink"
            android:textColor="#1B5E20"
            />

        <Button android:id="@+id/eight_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:text="8"
            android:textSize="30dp"
            android:backgroundTint="@color/Pink"
            android:textColor="#1B5E20"/>

        <Button android:id="@+id/nine_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:text="9"
            android:textSize="30dp"
            android:backgroundTint="@color/Pink"
            android:textColor="#1B5E20"/>

        <Button android:id="@+id/times_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:text="*"
            android:textSize="30dp"
            android:textColor="#1B5E20"
            android:backgroundTint="@color/Pink"/>

    </LinearLayout>

    <!--Fourth Linear Layout-->

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">

        <Button android:id="@+id/clear_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:text="C"
            android:textSize="30dp"
            android:backgroundTint="@color/Pink"
            android:textColor="#1B5E20"
            />

        <Button android:id="@+id/zero_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:text="0"
            android:textSize="30dp"
            android:backgroundTint="@color/Pink"
            android:textColor="#1B5E20"/>

        <Button android:id="@+id/equals_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:text="="
            android:textSize="30dp"
            android:backgroundTint="@color/Pink"
            android:textColor="#1B5E20"/>

        <Button android:id="@+id/divide_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:text="/"
            android:textSize="30dp"
            android:textColor="#1B5E20"
            android:backgroundTint="@color/Pink"/>

    </LinearLayout>
<Button android:id="@+id/getHistory"
    android:layout_width="match_parent"
    android:layout_height="50sp"
    android:text="ADVANCE - WITH HISTORY"
    android:layout_margin="30dp"
    android:backgroundTint="@color/LightCoral"
    android:textColor="@color/black"
    android:textSize="20dp"/>

    <TextView android:id="@+id/historyView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>